{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "archive_options": {
            "allOf": [
                {
                    "$ref": "#/definitions/archive"
                },
                {
                    "$ref": "#/definitions/segment"
                }
            ]
        }
    },
    "definitions": {
        "archive": {
            "type": "object",
            "properties": {
                "format": {
                    "$ref": "#/definitions/archive_type"
                },
                "file": {
                    "type": "string"
                }
            }
        },
        "segment": {
            "type": "object",
            "properties": {
                "label": {
                    "type": "number"
                }
            }
        },
        "archive_type": {
            "oneOf": [
                {
                    "const": "tar.gz"
                },
                {
                    "const": "tar"
                },
                {
                    "const": "zip"
                }
            ]
        }
    }
}
